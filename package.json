    "@types/opentype.js": "^1.3.1",
    "@types/pako": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-mocha-no-only": "^1.1.1"
  },
  "dependencies": {
    "buffer": "^5.6.0",
