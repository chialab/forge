{
  "name": "@chialab/forge",
  "version": "1.0.1",
  "description": "A library for fonts manipulation built on the top of Opentype.js and Fontkit.",
  "directories": {
    "src": "src"
  },
  "lib": "src/index.js",
  "module": "dist/esm/forge.js",
  "main": "dist/cjs/forge.js",
  "browser": "dist/umd/forge.js",
  "scripts": {
    "build": "rna build --production --bundle",
